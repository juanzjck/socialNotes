<div class="row">
  {{#each notes}}
  <div class="col-md-3">
    <div class="card">
      <div class="card-body">
        <h4 class="card-title d-flex justify-content-between align-items-center">
          {{ title }} 
        </h4>
        <p>{{ description }} </p>
        <h5>{{score}}</h5>
        <!-- DELETE REQUEST -->
        {{#if createdAt}}
          <p>{{createdAt}}</p>
        {{/if}}
      </div>
    </div>
  </div>
  {{else}}
  <div class="card mx-auto">
    <div class="card-body">
      <h1>Wop!!</h1>
      <p clsss="lead">No existen notas con esa categoria.</p>
      <a href="/notes/add">Crea tu categoria</a>
    </div>
  </div>
  {{/each}}
  
</div>